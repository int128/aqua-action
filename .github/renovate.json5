{
  "extends": [
    "config:base"
  ],
  "labels": [
    "r:{{depName}}",
    "r:{{depName}}/{{newVersion}}"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin"],
      "automerge": true
    }
  ],
  regexManagers: [
    {
      fileMatch: [
        "README.md",
        "action.yaml",
        "aqua.yaml",
      ],
      matchStrings: [
        ": (?<currentValue>.*?) # renovate: depName=(?<depName>.*?)\\n",
      ],
      datasourceTemplate: "github-releases",
    },
  ],
}
